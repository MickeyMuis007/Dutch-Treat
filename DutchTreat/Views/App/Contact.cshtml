@model ContactViewModel
@{ 
    ViewBag.Title = "Contact Us";
}
<form method="post">
    <label asp-for="Name">Your Name:</label>
    <br />
    <input asp-for="Name" />
    <br />
    <label asp-for="Email">Email</label>
    <br />
    <input type="email" asp-for="Email" />
    <br />
    <label asp-for="Subject">Subject</label>
    <br />
    <input asp-for="Subject" />
    <br />
    <label asp-for="Message">Message:</label>
    <br />
    <textarea rows="4" asp-for="Message"></textarea>
    <br />
    <input type="submit" value="Send Message" />
</form>

<!-- 
    Note:
        - The asp-for on the label:
            - The reason for this is, that when someone clicks on the label it put focus on the input for that label.
            - Shawn Wildermuth advice to use asp-for for the labels aswell. He say's this is what users expect to work.
-->